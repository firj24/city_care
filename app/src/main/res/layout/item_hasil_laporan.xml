<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/bungkus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="74dp">

            <ImageView
                android:id="@+id/media"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:src="@drawable/jalan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jak"
                android:text="Jalan Rusak"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:textColor="#05597D"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/media"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/jak"
                android:text="30 menit lalu"
                android:textSize="12dp"
                android:layout_marginTop="2dp"
                android:textColor="#05597D"
                app:layout_constraintStart_toEndOf="@+id/media"
                app:layout_constraintTop_toBottomOf="@+id/kategori" />

            <TextView
                android:id="@+id/latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/jak"
                android:text="latitude"
                android:textColor="#05597D"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/media"
                app:layout_constraintTop_toBottomOf="@+id/waktu" />

            <TextView
                android:id="@+id/longtitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/jak"
                android:text="longtitude"
                android:textColor="#05597D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/latitude" />

            <TextView
                android:id="@+id/status"
                android:layout_width="73dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:background="@color/ijo"
                android:gravity="center"
                android:text="Proses"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
