<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bir"
    tools:context=".KategoriKer">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Kategori Kerusakan"
        android:textSize="24dp"
        android:fontFamily="@font/jakbold"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="120dp"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih 1 kategori"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/jak"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="75dp">

        <FrameLayout
            android:id="@+id/jalan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/butgam"
            android:layout_marginEnd="5dp">

            <ImageButton
                android:id="@+id/jal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/motorwayy"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:backgroundTint="@color/ijo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jak"
                android:text="Jalan"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/jembatan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/butgam"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp">

            <ImageButton
                android:id="@+id/jem"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/goldengate"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:backgroundTint="@color/ijo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jembatan"
                android:fontFamily="@font/jak"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="11dp">

        <FrameLayout
            android:id="@+id/bencana"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/butgam"
            android:layout_marginEnd="5dp">

            <ImageButton
                android:id="@+id/benc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/wildfire"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:backgroundTint="@color/ijo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jak"
                android:text="Bencana"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/lainnya"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/butgam"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp">

            <ImageButton
                android:id="@+id/lain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/barriers"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:backgroundTint="@color/ijo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jak"
                android:text="Lainnya"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="14dp"
                android:layout_marginTop="50dp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>